# Caddy configuration for Bulq
# Production: Behind upstream reverse proxy at vagolan.com/bulq
# Upstream proxy forwards vagolan.com/bulq/* to this server
# This server listens on :80 and serves the app at root

:80 {
    # Enable gzip compression
    encode gzip

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Handle API routes - proxy to backend
    handle /auth/* {
        reverse_proxy backend:8000
    }
    handle /groups/* {
        reverse_proxy backend:8000
    }
    handle /runs/* {
        reverse_proxy backend:8000
    }
    handle /stores/* {
        reverse_proxy backend:8000
    }
    handle /products/* {
        reverse_proxy backend:8000
    }
    handle /shopping/* {
        reverse_proxy backend:8000
    }
    handle /distribution/* {
        reverse_proxy backend:8000
    }
    handle /notifications/* {
        reverse_proxy backend:8000
    }
    handle /search/* {
        reverse_proxy backend:8000
    }
    handle /reassignment/* {
        reverse_proxy backend:8000
    }
    handle /admin/* {
        reverse_proxy backend:8000
    }
    handle /ws/* {
        reverse_proxy backend:8000
    }

    # Handle everything else - serve static files
    handle {
        root * /srv
        try_files {path} /index.html
        file_server
    }
}