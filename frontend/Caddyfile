# Caddy configuration for Bulq Frontend
# Serves static React build behind Caddy reverse proxy

{
    # Disable automatic HTTPS - we're behind a reverse proxy
    auto_https off
}

:3000 {
    # Enable gzip compression
    encode gzip

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Serve static assets directly (with caching)
    handle /assets/* {
        root * /srv
        file_server
        header Cache-Control "public, max-age=31536000, immutable"
    }

    # Handle everything else - serve static files with SPA fallback
    handle {
        root * /srv
        # Try to serve the requested file, if not found serve index.html for SPA routing
        try_files {path} /index.html
        file_server
    }
}
