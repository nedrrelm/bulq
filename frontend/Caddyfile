# Caddy configuration for Bulq
# Dynamically configured via CADDY_LISTEN environment variable
# Development: CADDY_LISTEN=localhost:3000 (HTTPS with self-signed cert)
# Production:  CADDY_LISTEN=:80 (behind upstream reverse proxy)

{$CADDY_LISTEN:localhost:3000} {
    # Enable gzip compression
    encode gzip

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Handle API routes - proxy to backend
    # All backend routes are prefixed with /api to avoid conflicts with frontend routes
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Serve static assets directly (with caching)
    handle /assets/* {
        root * /srv
        file_server
        header Cache-Control "public, max-age=31536000, immutable"
    }

    # Handle everything else - serve static files with SPA fallback
    handle {
        root * /srv
        # Try to serve the requested file, if not found serve index.html for SPA routing
        try_files {path} /index.html
        file_server
    }
}
