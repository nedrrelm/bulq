# ============================================
# BULQ DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================
# This file is tracked in git and contains development defaults.
# No secrets should be in this file.
#
# For production, use deployment/.env.prod
# ============================================

# ============================================
# SECURITY
# ============================================
# Development secret key (not for production!)
SECRET_KEY=dev-secret-key-not-for-production

# Disable secure cookies for HTTP development
SECURE_COOKIES=false

# ============================================
# DATABASE
# ============================================
POSTGRES_DB=bulq
POSTGRES_USER=bulq
POSTGRES_PASSWORD=bulq_dev_pass

DATABASE_URL=postgresql://bulq:${POSTGRES_PASSWORD}@db:5432/bulq

# Database Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================
# APPLICATION
# ============================================
# Use in-memory repository for fast development (no DB needed)
# Change to 'database' to test with PostgreSQL
REPO_MODE=memory

# Session
SESSION_EXPIRY_HOURS=24

# ============================================
# CORS
# ============================================
# Empty = allow all origins in development
ALLOWED_ORIGINS=

# ============================================
# DOCKER/CADDY
# ============================================
CADDY_DOMAIN=localhost
CADDY_PORT=1314
CADDY_INTERNAL_PORT=80

# ============================================
# BUILD
# ============================================
# Enable dev dependencies (linting, testing tools)
BUILD_DEV_DEPS=true

# Base path for frontend
VITE_BASE_PATH=/

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE=
