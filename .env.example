# Application Environment
ENV=development

# Security
SECRET_KEY=generate-a-random-secret-key-here

# Database Configuration
POSTGRES_DB=bulq
POSTGRES_USER=bulq
POSTGRES_PASSWORD=change-this-password
DATABASE_URL=postgresql://bulq:change-this-password@db:5432/bulq

# Repository Mode
# Options: "memory" (test data) or "database" (PostgreSQL)
REPO_MODE=memory

# Session Configuration
SESSION_EXPIRY_HOURS=24

# CORS Configuration (comma-separated)
# Development: http://localhost:3000,http://localhost:5173
# Production: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log format: "structured" (key=value pairs) or "json" (production)
LOG_FORMAT=structured
# Log file path (leave empty for console only, or set to /app/logs/app.log)
LOG_FILE=
